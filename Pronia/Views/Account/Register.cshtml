@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-item">
                    <h2 class="breadcrumb-heading">REGISTER PAGE</h2>
                    <ul>
                        <li>
                            <a asp-controller="home" asp-action="index">Home</a>
                        </li>
                        <li>Register</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="register-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 register">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text text-danger"></div>
                    <div class="login-form">
                        <h4 class="login-title">Register</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <label for="">First Name</label>
                                <input asp-for="Name" placeholder="First Name" />
                                <span asp-validation-for="Name"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="">Last Name</label>
                                <input asp-for="SurName" placeholder="Last Name" />
                                <span asp-validation-for="SurName"></span>
                            </div>
                            <div class="col-md-12">
                                <label for="">Email Address*</label>
                                <input asp-for="Email" placeholder="Email Address" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="col-md-12">
                                <label for="">Username</label>
                                <input asp-for="UserName" placeholder="UserName" />
                                <span asp-validation-for="UserName"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="">Password</label>
                                <input asp-for="Password" placeholder="Password" />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="">Confirm Password</label>
                                <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                <span asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-pronia-primary">REGISTER</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_Validation")
                            }