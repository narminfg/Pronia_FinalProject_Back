@inject ILayoutService layoutService
@{
    ViewData["Title"] = "Index";
    IEnumerable<WishListVM> wishListVMs = await layoutService.GetWishList();
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-item">
                    <h2 class="breadcrumb-heading">WISHLIST PAGE</h2>
                    <ul>
                        <li>
                            <a asp-controller="home" asp-action="index">Home</a>
                        </li>
                        <li>Wishlist</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="wishlist-area">
    <div class="container">
        <div class="row">
            @if (wishListVMs.Count() > 0)
            {
                <div class="col-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">Remove</th>
                                <th scope="col">Images</th>
                                <th scope="col">Product</th>
                                <th scope="col">Unit Price</th>
                                <th scope="col">Stock Status</th>
                                <th scope="col">Add To Cart</th>
                            </tr>
                        </thead>
                        <tbody class="wishListTable">
                            @await Html.PartialAsync("_WishListPartial",wishListVMs)

                        </tbody>
                    </table>
                </div>
            }

        </div>
    </div>
</div>




