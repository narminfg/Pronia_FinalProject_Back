@model PageNatedList<Blog>
@{
    IEnumerable<Blog> blogs = ViewBag.Blogs;
}

<main>
    <div class="breadcrumb-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="breadcrumb-item">
              <h2 class="breadcrumb-heading">BLOG</h2>
              <ul>
                <li>
                  <a href="index.html">Home</a>
                </li>
                <li>Blog Grid View</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="blog-area-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-8">
            <div class="blog-item-wrap">
              
          @foreach (Blog blog in Model)
                        {
                            <div class="col-md-6">
                                <div class="container">
                                    <div class="blog-item">
                                        <div class="blog-content">
                                            <div class="blog-meta">
                                                <ul>
                                                    <li class="author">
                                                        <a href="">By: @blog.CreatedBy</a>
                                                    </li>
                                                    <li class="date"> @blog.CreatedAt?.ToString("dd.MM.yyyy")</li>
                                                </ul>
                                            </div>
                                            <h2 class="title">
                                                <a href="blog-detail.html">There Many Variations</a>
                                            </h2>
                                            <p class="short-desc mt-3">
                                                @blog.Description
                                            </p>
                                        </div>
                                        @if (blog.Image != null)
                                        {
                                            <div class="blog-img">
                                                <a asp-route-id="@blog.Id" asp-controller="blog" asp-action="detail">
                                                    <img class="img-full" src="~/assets/img/blog/@blog.Image" alt="">
                                                </a>
                                                <div class="inner-btn-wrap">
                                                    <a asp-route-id="@blog.Id" asp-controller="blog" asp-action="detail" class="inner-btn">
                                                        <i class="fa-solid fa-link"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        }
                                        else{
                                            <div class="radio">
                                                <iframe width="560" height="315" src="~/assets/video/@blog.Video
                                                title="YouTube video player" frameborder="0"
                                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                                                allowfullscreen></iframe>
                                        </div>
                                        }
                                        
                                        
                                    </div>
                                </div>
                            </div>

                        }
          
          </div>
            <div class="pagination-area">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                @if (Model.PageIndex > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="blog" asp-action="index"
                                       asp-route-pageIndex="@(Model.PageIndex-1)"><i class="fa-solid fa-angles-left"></i></a>
                                    </li>
                                }

                                @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                                {
                                    <li class="page-item @(Model.PageIndex==i ? "active" : "")">
                                        <a class="page-link"
                                       asp-controller="blog" asp-action="index" asp-route-pageIndex="@i">@i</a>
                                    </li>
                                }

                                @if (Model.PageIndex < Model.TotalPage)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="blog" asp-action="index"
                                       asp-route-pageIndex="@(Model.PageIndex+1)"><i class="fa-solid fa-angles-right"></i></a>
                                    </li>
                                }
                            </ul>
                        </nav>
            </div>
          </div>
