@model OrderVM
@{
    ViewData["Title"] = "Checkout";
}

 <div class="breadcrumb-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-12">
            <div class="breadcrumb-item">
              <h2 class="breadcrumb-heading">CHECKOUT PAGE</h2>
              <ul>
                <li>
                  <a  asp-controller="home" asp-action="index">Home</a>
                </li>
                <li>Checkout</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="checkout-area">
      <div class="container">
        <div class="row">
          <div class="col-lg-6">
                @await Html.PartialAsync("_CheckoutPartial",Model.Order)
          </div>
          <div class="col-lg-6">
            <div class="your-order">
              <h3 class="checkout-title">YOUR ORDER</h3>
              <div class="order-summary-content">
                <div class="your-order-table table-responsive text-center">
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <th>Products</th>
                        <th>Total</th>
                      </tr>
                    </thead>
                    <tbody>
                                    @foreach (BasketVM basketVM in Model.BasketVMs)
                                    {
                                        <tr>
                                            <td>
                                                @basketVM.Title <strong> × @basketVM.Count</strong>
                                            </td>
                                            <td>$@(basketVM.Price * basketVM.Count)</td>
                                        </tr>
                                    }
                      
                      <tr>
                        <td>Cart Subtotal</td>
                                        <td>$@(Model.BasketVMs.Sum(b => b.Price * b.Count))</td>
                      </tr>
                      <tr>
                        <td>Order Total</td>
                                        <td>$@(Model.BasketVMs.Sum(b => b.Price * b.Count))</td>
                      </tr>
                    </tbody>
                  </table>
                </div>
                <div class="payment-method">
                  <div class="method">
                    <a href="">Direct Bank Transfer.</a>
                  </div>
                  <div class="method">
                    <a href="">Cheque Payment</a>
                  </div>
                  <div class="method">
                    <a href="">PayPal</a>
                  </div>
                </div>

                <div class="order-button-payment">
                            <button form="orderCheckoutForm" type="submit">PLACE ORDER</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>

