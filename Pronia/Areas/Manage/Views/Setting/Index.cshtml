@model IEnumerable<Setting>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Category Page</h1>
    </div>
    <div class="col-lg-2">
        <a class="btn btn-primary" asp-action="create" asp-controller="Category" asp-area="manage">Create</a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>*</th>
                    <th>Key</th>
                    <th>Value</th>
                    <th>Settings</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Setting setting in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td>@setting.Key</td>
                        <td>
                            @if (setting.Key == "Logo")
                            {
                                <img style="width:100px;" src="~/assets/img/logo/@setting.Value" />
                            }
                            else
                            {
                                @setting.Value
                            }

                        </td>
                        <td>
                            <a asp-area="manage" asp-controller="setting" asp-action="update" asp-route-id="@setting.Id" class="btn btn-primary ">Update</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>







