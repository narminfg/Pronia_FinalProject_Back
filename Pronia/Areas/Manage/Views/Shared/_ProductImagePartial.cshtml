@model IEnumerable<ProductImage>

@if (Model != null && Model.Count() > 0)
{
    foreach (ProductImage productImage in Model)
    {
        <div class="col-lg-2">
            <img style="width:100px;" src="~/assets/img/product/@productImage.Image" />
            @if (Model.Count() > 1)
            {
                <a asp-area="manage" asp-controller="product" asp-action="deleteimage" asp-route-id="@productImage.ProductId" asp-route-imageId="@productImage.Id" class=" btn btn-danger deleteImage">Delete image</a>
            }
        </div>
    }
}